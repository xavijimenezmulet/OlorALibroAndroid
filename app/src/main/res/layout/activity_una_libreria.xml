<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.UnaLibreriaActivity"
    android:padding="25dp"
    android:background="@drawable/fondomain">

    <ImageView
        android:id="@+id/ImgLibrerias"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        tools:srcCompat="@drawable/oloralibro"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/TxtTitleLib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        style="@style/Titulos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtTitDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margen"
                android:gravity="right"
                style="@style/Info"/>

            <TextView
                android:id="@+id/TxtDireccion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/margen"
                style="@style/InfoLibrerias"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtTitCorreo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/margen"
                android:text=""
                android:gravity="right"
                style="@style/Info"/>

            <TextView
                android:id="@+id/TxtCorreo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/margen"
                style="@style/InfoLibrerias"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TxtTitTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margen"
                android:gravity="right"
                style="@style/Info"/>

            <TextView
                android:id="@+id/TxtTelefono"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/margen"
                style="@style/InfoLibrerias"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/BtnLibros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blanco"
            android:background="@color/negro"
            android:textStyle="bold"
            android:text="Libros"/>
        <Button
            android:id="@+id/BtnActividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blanco"
            android:background="@color/negro"
            android:textStyle="bold"
            android:text="Actividades"/>
    </LinearLayout>

</LinearLayout>