<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RankingActivity"
    android:orientation="vertical"
    android:background="@drawable/fondomain">

    <TextView
        android:id="@+id/txtTitRanking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:padding="20dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/negro"
        android:fontFamily="@font/sweet_hipster"
        android:gravity="center"
        android:textStyle="bold"
        android:text="RANKING USUARIOS" />



    <GridView
        android:id="@+id/grdRankingUsuaris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:orientation="vertical">


    </GridView>


</LinearLayout>