<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomain"
    android:orientation="vertical"
    tools:context=".Activities.VerActActivity">

    <TextView
        android:id="@+id/tvnom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomline"
        android:paddingVertical="5dp"
        style="@style/SubTitulos"
        android:textSize="50sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_gradient"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/descripcion"
                android:textStyle="bold"
                style="@style/Info"/>

            <TextView
                android:id="@+id/tvdesc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Info"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_gradient"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/lugar"
                style="@style/Info"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvlugar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Info"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_gradient"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/tipo"
                style="@style/Info"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvtipo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Info"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_gradient"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/fecha"
                style="@style/Info"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvfecha"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Info"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_gradient"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/hora"
                style="@style/Info"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvhora"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Info" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/libreriasAlt"
            android:textStyle="bold"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:background="@color/blancoTrans"
            style="@style/Info"/>

        <ListView
            android:id="@+id/listlibact"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bottomlinewhite"></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/comentarios"
            style="@style/Info"
            android:textStyle="bold"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"/>
        <GridView
            android:id="@+id/GrdOpiniones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:numColumns="1"
            android:paddingHorizontal="5dp"></GridView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/EditOp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="top|left"
                android:padding="10dp"
                android:background="@color/blanco"
                />
            <Button
                android:id="@+id/BtnC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/enviar"
                android:textStyle="bold"
                android:textColor="@color/blanco"
                android:background="@color/negro"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>